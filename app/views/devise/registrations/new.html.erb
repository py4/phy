<div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
	<div class="panel panel-info">
		<div class="panel-heading">
		<div class="panel-title">عضو شوید</div>
		</div>  
		<div class="panel-body" >
			<%= simple_form_for(resource, :as => resource_name, :url => user_registration_path, html: {id: 'signupform', class: 'form-horizontal', role: 'form'}) do |f| %>
				<div id="signupalert" style="display:none" class="alert alert-danger">
					<p>Error:</p>
					<span>
						<%= f.error_notification %>
					</span>
				</div>

				<div class="form-group">
					<label for="email" class="col-md-3 control-label">آدرس ایمیل</label>
					<div class="col-md-9">
						<%= f.input :email , placeholder: 'آدرس ایمیل', :autofocus => true, input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				<div class="form-group">
					<label for="password" class="col-md-3 control-label">رمز عبور</label>
					<div class="col-md-9">
						<%= f.input :password, placeholder: 'رمز عبور' , :required => true, input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				
				<div class="form-group">
					<label for="password" class="col-md-3 control-label">تکرار رمز عبور</label>
					<div class="col-md-9">
						<%= f.input :password_confirmation, placeholder: 'تکرار رمز عبور', :required => true,input_html: {class: 'form-control'} , label: false %>
					</div>
				</div>

				<div class="form-group">
					<label for="username" class="col-md-3 control-label">نام کاربری</label>
					<div class="col-md-9">
						<%= f.input :username , placeholder: 'نام کاربری', input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				<div class="form-group">
					<label for="name" class="col-md-3 control-label">نام</label>
					<div class="col-md-9">
						<%= f.input :name , placeholder: 'نام', input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				<div class="form-group">
					<label for="surname" class="col-md-3 control-label">نام خانوادگی</label>
					<div class="col-md-9">
						<%= f.input :surname , placeholder: 'نام خانوداگی', input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				<div class="form-group">
					<label for="age" class="col-md-3 control-label">سن</label>
					<div class="col-md-4">
						<%= f.input :age, collection: 18..60, :include_blank => "انتخاب کنید", input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>

				<div class="form-group">
					<label for="user_type" class="col-md-3 control-label">عضویت به عنوان</label>
					<div class="col-md-3">
						<%= f.input :user_type, collection: [["متقاضی",0],["مشاور",1]], :default => 0 ,input_html: {class: 'form-control'} , label: false%>
					</div>
				</div>



				<div class="form-group">
					<!-- Button -->                                        
					<div class="col-md-offset-3 col-md-9">
						<%= f.button :submit, "ثبت نام", class: 'btn btn-info' %>
						<span style="margin-left:8px;">یا</span>  
                                        <a href="/users/sign_in" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                            وارد شوید
                                        </a>
                                        
					</div>
				</div>

			<% end %>
		</div>
	</div>




</div> 